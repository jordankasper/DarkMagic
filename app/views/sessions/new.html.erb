<div class="row-fluid">
    <div class="dialog">
        <div class="block">
            <p class="block-heading">Sign In</p>
            <div class="block-body">

              <%= form_tag sessions_path do %>
              <div>
                <div class="field">
                  <%= label_tag :email  %>
                  <%= text_field_tag :email, params[:email], class: 'span12', placeholder: "Username" %>
                </div>
                <div class="field">
                  <%= label_tag :password %>
                  <%= password_field_tag :password, params[:password], class: 'span12', placeholder: "Username"  %>
                </div>
                <div class="field">
                  <%= check_box_tag :remember_me, params[:remember_me] %>
                  <%= label_tag :remember_me %>
                </div>
                <div class="actions"><%= submit_tag "Log in" %></div>
              </div>
              <% end %>  
              <center><div>Dont have an account? <%= link_to 'Sign Up', signup_path %> </div></center>             
            </div>
        </div>
    </div>
</div>

